#!/bin/bash

info() {
  echo "==> $@"
}

error() {
  echo "==> ERROR: $@"
} >&2

die() {
  error "$@"
  exit 1
}

(( $# )) || die "No root directory specified"
newroot=$1; shift
pacman_args=("${@:-base}")

if [[ $EUID -ne 0 ]]; then
	die "This script must be run as root"
fi

info "Setting up target directory..."
mkdir -p "$newroot"
mkdir -m 0755 -p "$newroot"/{var/{cache/pacman/pkg,lib/pacman,log},dev,run,etc}
mkdir -m 1777 -p "$newroot"/tmp
mkdir -m 0555 -p "$newroot"/{sys,proc}

info "Setting up /dev/null in new root..."
mknod "$newroot/dev/null" c 1 3

info "Set up a temporary config with patched paths for bootstrapping..."
tmpconf="/tmp/pacstrap-docker-pacman.conf"
cp "$newroot/etc/pacman.conf" "$tmpconf"
sed -i "s| \(/etc/pacman.d\)| $newroot\1|" "$tmpconf"

info "Setting up cleanup trap..."
trap "rm '$newroot/dev/null' '$tmpconf'" EXIT

info "Installing packages at $newroot..."
if ! pacman -r "$newroot" --config "$tmpconf" -Sy --noconfirm "${pacman_args[@]}"; then
  die 'Failed to install packages into new root'
fi
